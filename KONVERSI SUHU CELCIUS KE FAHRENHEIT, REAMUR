#include<stdio.h>
#include<conio.h>
int main()
{
int C;
int F;
int R;
printf("\t\t\t PROGRAM KONVERSI SUHU CELCIUS\n");
printf("\t\t\t APRI LISTYANTO\n");
printf("\t\t\tCELCIUS >>===> FAHRENHEIT dan REAMUR\n");
printf("\t\t\t====================================\n");
printf("Masukkan temperatur dalam derajat Celcius dan lalu Enter aja : ");
scanf("%d", &C);
F = (C*1.8)+32;
R = (C*0.8);
printf("%d derajat Celcius = %d derajat Fahrenheit.\n",C,F);
printf("%d derajat Celcius = %d derajat Reamur.\n",C,R);
printf("\nTerima Kasih :D""\n""Created By:Apri")
getch();
return 0;
}
